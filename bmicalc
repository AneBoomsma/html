  <script type="text/javascript">
    function BMI() {
      var h = document.getElementById("h").value;
      var w = document.getElementById("w").value;
      var bmi = (w / h ** 2) * 10000;

      document.getElementById("result").innerHTML = "BMI: " + bmi.toFixed(1);
    }
  </script>
  <body>
    <div>
      <img src="images/bmi.png" alt="" />
